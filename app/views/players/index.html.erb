<h1 style="text-align: center"> ALL TIME PISTEPÖRSSI </h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nimi</th>
      <th>Pelit</th>
      <th>Maalit</th>
      <th>Pisteet</th>
      <th>Syötöt</th>
      <th>+</th>
      <th>-</th>
      <th>VOM</th>
    </tr>
  </thead>
  <% @players.order("points desc").each do |p| %>
  <tr>
    <th><%= p.name %></th>
    <th><%= p.games %></th>
    <th><%= p.goals %></th>
    <th><%= p.points %></th>
    <th><%= p.assists %></th>
    <th><%= p.plus %></th>
    <th><%= p.minus %></th>
    <th><%= p.vom %></th>
    <% if current_user %>
    <th><%= link_to "Muokkaa", edit_player_path(p) %></th>
    <% end %>
  </tr>
  <% end %>
</table>
