<h1> Muokkaa maalivahtia </h1>
<%= form_for(@goalie) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Nimi' %>
    <%= f.text_field(:name, class: "form-control") %>
  </div>
  <div class="form-group">
    <%= f.label :games, 'Pelit' %>
    <%= f.text_field(:games, class: "form-control")%>
  </div>
  <div class="form-group">
    <%= f.label :saves, 'Torjunnat' %>
    <%= f.text_field(:saves, class: "form-control")%>
  </div>
  <div class="form-group">
    <%= f.label :assists, 'Syötöt' %>
    <%= f.text_field(:assists, class: "form-control")%>
  </div>
  <div class="form-group">
    <%= f.label :wins, 'Voitot' %>
    <%= f.text_field(:wins, class: "form-control")%>
  </div>
  <div class="form-group">
    <%= f.label :ties, 'Tasurit' %>
    <%= f.text_field(:ties, class: "form-control")%>
  </div>
  <div class="form-group">
    <%= f.label :losses, 'Häviöt' %>
    <%= f.text_field(:losses, class: "form-control")%>
  </div>
  <%= f.submit "Muokkaa", class: "btn btn-primary" %>
  <%= link_to "Poista", goaly_path(@goalie), method: :delete, class: "btn btn-danger" %>
  <%= link_to 'Takaisin', root_path %>

<% end %>
